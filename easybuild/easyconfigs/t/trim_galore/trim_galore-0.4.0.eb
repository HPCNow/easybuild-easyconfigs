easyblock = 'Tarball'

name = 'trim_galore'
version = '0.4.0'

homepage = 'http://www.bioinformatics.babraham.ac.uk/projects/trim_galore/'
description = """Trim Galore! is a wrapper script to automate quality and 
adapter trimming as well as quality control, with some added functionality 
to remove biased methylation positions for RRBS sequence files."""

toolchain = {'name': 'foss', 'version': '2015a'}

source_urls = ['http://www.bioinformatics.babraham.ac.uk/projects/trim_galore/']
sources = ['%(name)s_v%(version)s.zip']

perl = 'Perl'
perlver = '5.20.1'
versionsuffix = '-%s-%s' % (perl, perlver)
dependencies = [
    (perl, perlver, '-bare'),
]

modextrapaths = {'PATH': ['']}

sanity_check_paths = {
    'files': ['trim_galore'],
    'dirs': [],
}

moduleclass = 'bio'
